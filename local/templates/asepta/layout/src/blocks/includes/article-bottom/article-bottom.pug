.article__bottom
    .article__bottom-products
        .product-offers
            h2 Продукты из статьи
            .swiper.product-offers__list(data-slider="loop-line" data-init-breakpoint="1024")
                .swiper-wrapper
                    each product in list
                        .swiper-slide.product-offers__item 
                            +product-card({
                                title: product.title,
                                desc: product.desc,
                                image: product.image,
                                tags: product.tags || []
                            })
                .swiper-scrollbar(data-slider-scrollbar)
        +btn({isLink: true, text: 'Смотреть все'}).btn--outline.article__bottom-products__btn

    .article__bottom-articles
        .article__bottom-articles__inner
            h2 Читать далее
            .swiper.article__bottom-articles__slider(data-slider-article="mobile-full" data-width-init="1024")
                .swiper-wrapper
                    each card, index in cards
                        - const cardWithImg = { ...card, img: { src: `articles-${index + 1}.jpg`, srcWebp: `articles-${index + 1}.webp` } }
                        .swiper-slide
                            +articles-card(cardWithImg)
                .swiper-scrollbar(data-slider-scrollbar)
        +btn({
            text: 'Смотреть все',
            isLink: true
        }).btn--outline.article__bottom-articles__btn